<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff1b1b1b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/textView1"
        android:src="@drawable/salman" />
    
    <Button
        android:id="@id/button_chem"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button_phys"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/button_phys"
        android:text="View MP3 Sample"
        android:onClick="launchURL"
        android:textSize="12dp" />

    <Button
        android:id="@id/button_phys"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_chem"
        android:layout_alignLeft="@id/button_calc"
        android:layout_alignRight="@id/button_calc"
        android:text="View PDF Sample"
        android:onClick="launchURL"
        android:textSize="12dp" />

    <TextView
        android:id="@id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button_chem"
        android:layout_alignBottom="@id/button_chem"
        android:layout_alignLeft="@id/textView4"
        android:text="Chemistry"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_alignBottom="@id/textView2"
        android:layout_alignLeft="@id/textView3"
        android:text="Subjects Taught"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button_calc"
        android:layout_alignBottom="@id/button_calc"
        android:layout_alignParentLeft="true"
        android:text="Calculus I"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <Button
        android:id="@id/button_calc"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_phys"
        android:layout_alignLeft="@id/textView2"
        android:layout_alignRight="@id/textView2"
        android:text="View Video Sample"
        android:onClick="launchURL"
        android:textSize="12dp" />

    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_calc"
        android:layout_alignParentRight="true"
        android:text="Examine Lessons"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button_phys"
        android:layout_alignBottom="@id/button_phys"
        android:layout_alignLeft="@id/textView3"
        android:text="Physics: Mechanics"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <Button
        android:id="@id/button_contact"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView8"
        android:layout_alignLeft="@id/textView2"
        android:layout_alignRight="@id/imageView1"
        android:layout_alignTop="@id/textView1"
        android:layout_marginBottom="215dp"
        android:text="Contact"
        android:textSize="10sp"
        android:onClick="launchURL" />

    <TextView
        android:id="@id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView6"
        android:layout_alignLeft="@id/imageView1"
        android:text="Website:"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignRight="@id/imageView1"
        android:layout_alignTop="@id/textView7"
        android:text="www.khanacademy.com"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/Button01"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_contact"
        android:layout_alignLeft="@id/textView8"
        android:layout_alignTop="@id/imageView1"
        android:layout_toLeftOf="@id/button_contact"
        android:text="Subscribe"
        android:textSize="10sp" />

    <TextView
        android:id="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView1"
        android:layout_alignParentTop="true"
        android:text="Profile"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

</RelativeLayout>